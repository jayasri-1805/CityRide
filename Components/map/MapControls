import React from "react";
import { Card, CardContent } from "@/components/ui/card";
import { Button } from "@/components/ui/button";
import { Badge } from "@/components/ui/badge";
import { X, Route as RouteIcon } from "lucide-react";

export default function MapControls({ routes, selectedRoute, onRouteSelect, onClearSelection }) {
  return (
    <div className="absolute top-4 right-4 z-[1000] w-80 hidden lg:block">
      <Card className="bg-white/95 backdrop-blur-sm">
        <CardContent className="p-4">
          {selectedRoute ? (
            <div>
              <div className="flex items-center justify-between mb-3">
                <h3 className="font-semibold">Route Details</h3>
                <Button
                  variant="ghost"
                  size="icon"
                  onClick={onClearSelection}
                  className="h-8 w-8"
                >
                  <X className="w-4 h-4" />
                </Button>
              </div>
              <div className="space-y-2">
                <div className="flex items-center gap-2">
                  <div
                    className="w-4 h-4 rounded"
                    style={{ backgroundColor: selectedRoute.route_color }}
                  />
                  <span className="font-medium">{selectedRoute.route_number}</span>
                </div>
                <p className="text-sm text-gray-600">{selectedRoute.route_name}</p>
                <div className="flex gap-2">
                  <Badge variant="outline">
                    {selectedRoute.route_type}
                  </Badge>
                  <Badge variant="outline">
                    Every {selectedRoute.frequency_minutes} min
                  </Badge>
                </div>
                {selectedRoute.operating_hours && (
                  <p className="text-xs text-gray-500">
                    Operating: {selectedRoute.operating_hours.start_time} - {selectedRoute.operating_hours.end_time}
                  </p>
                )}
              </div>
            </div>
          ) : (
            <div>
              <h3 className="font-semibold mb-3">Active Routes</h3>
              <div className="space-y-2 max-h-60 overflow-y-auto">
                {routes.filter(r => r.is_active).map((route) => (
                  <button
                    key={route.id}
                    onClick={() => onRouteSelect(route)}
                    className="w-full text-left p-2 hover:bg-gray-50 rounded-lg transition-colors"
                  >
                    <div className="flex items-center gap-2">
                      <div
                        className="w-3 h-3 rounded"
                        style={{ backgroundColor: route.route_color }}
                      />
                      <span className="font-medium text-sm">{route.route_number}</span>
                      <RouteIcon className="w-3 h-3 text-gray-400" />
                    </div>
                    <p className="text-xs text-gray-600 mt-1">{route.route_name}</p>
                  </button>
                ))}
              </div>
            </div>
          )}
        </CardContent>
      </Card>
    </div>
  );
}
